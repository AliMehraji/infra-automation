{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": [
        "arn:aws:s3:::mimir",
        "arn:aws:s3:::mimir/*",
        "arn:aws:s3:::mimir-blocks",
        "arn:aws:s3:::mimir-blocks/*",
        "arn:aws:s3:::mimir-ruler",
        "arn:aws:s3:::mimir-ruler/*",
        "arn:aws:s3:::mimir-alertmanager",
        "arn:aws:s3:::mimir-alertmanager/*"
      ]
    }
  ]
}

