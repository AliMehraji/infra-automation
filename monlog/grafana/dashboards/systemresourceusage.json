{
  "dashboard": {
    "id": null,
    "title": "System Resource Usage",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Maximum CPU Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "max_over_time(node_cpu_seconds_total{mode=\"idle\"}[1h]) * 100",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "type": "graph",
        "title": "Maximum RAM Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "max_over_time(node_memory_MemTotal_bytes - (node_memory_MemFree_bytes + node_memory_Buffers_bytes + node_memory_Cached_bytes)[1h]) / 1024 / 1024",
            "legendFormat": "RAM Usage",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "10s",
    "schemaVersion": 18,
    "version": 4,
    "links": [],
    "editable": true,
    "hideControls": false
  },
  "folderId": 0,
  "overwrite": false
}

